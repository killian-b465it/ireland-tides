{
  "rules": {
    "locations": {
      ".read": true,
      ".write": "auth != null && (auth.token.email == 'IrishFishingHub@gmail.com' || auth.token.email == 'killian@email.com')"
    },
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "catches": {
      ".read": true,
      ".write": "auth != null"
    },
    "system": {
      ".read": true,
      ".write": "auth != null && (auth.token.email == 'IrishFishingHub@gmail.com')"
    },
    "sponsors": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() === true"
    }
  }
}